{
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "pestphp/pest": "^2.35"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Src\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7"
    },
    "scripts": {
        "run-all": [
            "@test",
            "@lint"
        ],
        "test": "vendor/bin/pest",
        "lint": "vendor/bin/phpstan analyse src tests --level 9"
    }
}
